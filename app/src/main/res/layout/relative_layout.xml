<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/top_title"
        style="@style/Base_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:text="@string/top_text" />

    <Button
        android:id="@+id/title1"
        style="@style/wrap_Content_Button"
        android:layout_below="@id/top_title"
        android:layout_alignEnd="@id/title1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/hint_text_2" />

    <Button
        style="@style/wrap_Content_Button"
        android:layout_below="@id/top_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/title1"
        android:text="@string/title1" />


    <Button
        android:id="@+id/center"
        style="@style/Square_Button_90dp"
        android:layout_centerInParent="true"
        android:text="@string/center_text" />

    <Button
        style="@style/Square_Button_90dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/center"
        android:text="@string/left_text" />

    <Button
        style="@style/Square_Button_90dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/center"
        android:text="@string/right_text" />

    <Button
        style="@style/Square_Button_90dp"
        android:layout_above="@id/center"
        android:layout_centerHorizontal="true"
        android:text="@string/above_text" />

    <Button
        style="@style/Square_Button_90dp"
        android:layout_below="@id/center"
        android:layout_centerHorizontal="true"
        android:text="@string/below_text" />

    <Button
        style="@style/wrap_Content_Button"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@id/hint2"
        android:gravity="start"
        android:text="@string/hint_text_1" />

    <Button
        android:id="@+id/hint2"
        style="@style/wrap_Content_Button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:text="@string/hint_text_2" />
</RelativeLayout>